---
import Image from "astro/components/Image.astro"
import favicon from "../../../public/favicon.ico"

---

<header class="site-header">
  <div class="container header-container">
    <a href="/" class="logo">
        <span class="logo-icon">
          <Image src={favicon} alt="Puerto Agua Verde Logo" width={32} height={32}></Image>
        </span><span class="logo-text"> Agua Verde</span>
    </a>
    <nav class="main-nav">
        <ul>
            <li><a href="#" data-key="nav_experiences">Experiencias</a></li>
            <li><a href="#" data-key="nav_sites">Sitios</a></li>
            <li><a href="#" data-key="nav_accommodation">Hospedaje</a></li>
            <li><a href="#" data-key="nav_restaurants">Restaurantes</a></li>
            <li><a href="#" data-key="nav_services">Servicios</a></li>
            <li class="mobile-only"><a href="#" class="btn btn-primary btn-sm" data-key="sign_in">Iniciar Sesión</a></li>
        </ul>
    </nav>
    <div class="header-right">
      <button id="lang-toggle" class="btn btn-outline btn-sm">EN</button>
      <button class="mobile-menu-btn" aria-label="Toggle menu">
        <span></span>
        <span></span>
        <span></span>
      </button>
    </div>
    <!-- <div class="header-actions">
        <a href="#" class="btn btn-primary btn-sm" data-key="sign_in">Iniciar Sesión</a>
    </div> -->
  </div>
</header>


<style>
  .site-header {
    padding: 1rem 0;
    position: sticky;
    top: 0;
    background-color: var(--bg-color);
    z-index: 100;
    border-bottom: 1px solid transparent;
    transition: border-color 0.3s ease;
  }

  .site-header.scrolled {
    border-color: var(--border-color);
  }

  .header-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 1rem;
  }

  .logo {
    font-family: var(--font-body);
    font-weight: 700;
    font-size: 1.2rem;
    letter-spacing: 1px;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .logo-icon {
    color: var(--accent-color);
  }

  .logo-text {
      display: inline;
    }

  /* Header right container - groups language button and menu */
  .header-right {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-left: auto;
  }

  .main-nav {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100vh;
    background-color: var(--bg-color);
    z-index: 99;
    padding: 6rem 2rem 2rem;
    transform: translateX(100%);
    transition: transform 0.3s ease-in-out;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-start;
  }

  .main-nav.active {
    transform: translateX(0);
    box-shadow: -5px 0 15px rgba(0,0,0,0.1);
  }

  .main-nav ul {
    display: flex;
    flex-direction: column;
    gap: 2rem;
    text-align: center;
    width: 100%;
  }

  .main-nav a {
    font-size: 1.65rem;
    font-weight: 600;
    display: block;
    padding: 0.5rem;
  }

  .header-actions {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .search-btn {
    background: none;
    border: none;
    cursor: pointer;
    color: var(--text-color);
  }

  .mobile-menu-btn {
    display: flex;
    flex-direction: column;
    gap: 4px;
    background: none;
    border: none;
    cursor: pointer;
  }

  .mobile-menu-btn span {
    width: 24px;
    height: 2px;
    background-color: var(--text-color);
    transition: all 0.3s ease;
  }

  .mobile-menu-btn.active span:nth-child(1) {
    transform: rotate(45deg) translate(5px, 5px);
  }

  .mobile-menu-btn.active span:nth-child(2) {
    opacity: 0;
  }

  .mobile-menu-btn.active span:nth-child(3) {
    transform: rotate(-45deg) translate(5px, -5px);
  }

  @media (min-width: 768px) {
    .header-right { display: none; }

    .main-nav {
      display: block;
      position: static;
      height: auto;
      padding: 0;
      background-color: transparent;
      transform: none;
      width: auto;
      box-shadow: none;
    }

    .main-nav ul {
      display: flex;
      flex-direction: row;
      gap: 2rem;
      text-align: left;
    }

    .main-nav a {
      font-weight: 500;
      font-size: 1.2rem;
    }

    /* Show header-actions on desktop with language button */
    .header-actions {
      display: flex;
      margin-left: auto;
    }

    #lang-toggle {
      display: inline-block;
      margin-right: 0.5rem;
    }
  }


</style>
