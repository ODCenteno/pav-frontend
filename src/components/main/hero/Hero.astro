---
import './hero.css';
import { Image } from 'astro:assets';
import img1 from "../../../images/pav-01.jpg";
import img2 from "../../../images/pav-10.jpg";
import img3 from "../../../images/pav-11.jpg";
import { useTranslations } from '../../../i18n/utils';

const t = useTranslations(Astro.currentLocale);
---

<section class="hero">
  <div class="container hero-container">
    <div class="hero-content">
      <h1 data-key="hero_title" set:html={t('hero.title')}></h1>
      <p data-key="hero_desc">{t('hero.desc')}</p>
      <a href="#" class="btn btn-accent" data-key="hero_cta">{t('hero.cta')}</a>
    </div>
    <div class="hero-images">
      <div class="hero-img-card img-1">
        <Image src={img1} alt="Coast">
      </div>
      <div class="hero-img-card img-2">
        <Image src={img2} alt="Nature">
      </div>
      <div class="hero-img-card img-3">
        <Image src={img3} alt="Landscape">
      </div>
    </div>
  </div>
</section>


